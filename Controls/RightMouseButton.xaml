<UserControl x:Class="VirtualMouseKeyboard.Controls.RightMouseButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VirtualMouseKeyboard.Controls"
             mc:Ignorable="d"          
             d:DesignHeight="100" d:DesignWidth="50"
             PreviewMouseDown="Key_MouseDown"  PreviewMouseUp="Key_MouseUp" MouseLeave="Key_MouseLeave"
             PreviewTouchDown="Key_TouchDown" PreviewTouchUp="Key_TouchUp" TouchLeave="Key_TouchLeave">
    <Grid>
        <Border Name="DefaultBackground" Background="AntiqueWhite" Visibility="Visible" CornerRadius="0,50,0,0">

        </Border>

        <Border Name="ClickedBackground" Background="Gray" Visibility="Collapsed" CornerRadius="0,50,0,0">

        </Border>
    </Grid>
</UserControl>
