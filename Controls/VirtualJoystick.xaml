<UserControl x:Class="VirtualMouseKeyboard.Controls.VirtualJoystick"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:VirtualMouseKeyboard.Controls"
             mc:Ignorable="d" Width="200" Height="200">
    <Canvas x:Name="JoystickCanvas" VerticalAlignment="Stretch" Margin="20" HorizontalAlignment="Stretch">
        <Canvas.Background>
            <SolidColorBrush Opacity="0.01"/>
        </Canvas.Background>
        <Ellipse x:Name="JoystickBackground" StrokeThickness="4" Stroke="AntiqueWhite"  />
        <Ellipse x:Name="JoystickStick" StrokeThickness="4" Stroke="AntiqueWhite"  />
    </Canvas>
</UserControl>